{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist/",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2017", "es6", "dom", "dom.iterable", "scripthost"],
    "jsx": "react",
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "src/node_modules/**/*.ts"]
}
